<div class="row-fluid">
    <%= form_for(@tweet, html: { class: "form-horizontal" }) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <div class="control-group">
            <div class="span2">
                <%= f.label :message, 'ツイート', class: "control-label" %>
            </div>
            <div class="controls span10">
                <%= f.text_area :message, rows: 3, class: "controls span10" %>
            </div>
        </div>
        <div class="control-group">
            <span class="control-label span1">　</span>
            <div class="controls form-inline">
                <%= f.label :hash_tag, "ハッシュタグ" %>
                <%= f.text_field :hashtag, value: @hashtag %>
                <%= f.label :speaker, "発表者" %>
                <%= f.text_field :speaker, value: @speaker %>
            </div>
        </div>
        <div class="form-actions">
            <div class="controls">
                <%= f.submit("送信", class: "btn btn-primary") %>
                <%= link_to "一覧に戻る", tweets_path, class: "btn" %>
            </div>
        </div>
    <% end %>
</div>
